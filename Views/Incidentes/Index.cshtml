@model IEnumerable<EcoWater.Models.Incidentes>

@{
    ViewData["Title"] = "Index";
}

<h1>Incidentes</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Embarcacoes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo_Poluicao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Severidade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Embarcacoes.Bandeira)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo_Poluicao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Severidade)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_Incidente">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id_Incidente">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_Incidente">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
