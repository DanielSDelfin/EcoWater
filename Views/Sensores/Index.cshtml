@model IEnumerable<EcoWater.Models.Sensores>

@{
    ViewData["Title"] = "Index";
}

<h1>Sensores</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Localizacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data_Instalacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localizacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data_Instalacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_Sensor">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id_Sensor">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_Sensor">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
